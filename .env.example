# ===================
# Database
# ===================
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/dbname

# ===================
# Server
# ===================
PORT=3000
AUTO_SYNC_ON_START=true

# ===================
# Frontend Map APIs (클라이언트용 - 도메인 제한 필수!)
# ===================
KAKAO_MAP_KEY=your_kakao_map_key

# ===================
# Public Data APIs
# ===================
UNIFIED_EXHIBITION_API_KEY=your_unified_api_key
CNV_API_KEY=your_cnv_api_key
SEMA_CULTURE_API_KEY=your_sema_api_key
MOCA_API_KEY=your_moca_api_key
GG_API_KEY=your_gg_api_key
DAEGU_DGFCA_BASE_URL=https://dgfca.or.kr/api/daegu/cultural-events

# ===================
# Korea Tourism API (무장애 관광정보)
# ===================
KOR_WITH_API_KEY=your_kor_with_api_key

# ===================
# Naver Search API
# ===================
NAVER_CLIENT_ID=your_naver_client_id
NAVER_CLIENT_SECRET=your_naver_client_secret
NAVER_EXHIBITION_ENABLED=true
NAVER_MAX_CALLS_PER_SYNC=10
NAVER_TREND_ENABLED=true
NAVER_TREND_STALE_MS=604800000
NAVER_TREND_COOLDOWN_MS=21600000
TREND_UPDATE_LIMIT=20

# ===================
# Brave Search API
# ===================
BRAVE_API_KEY=your_brave_api_key
BRAVE_ENABLED=true
BRAVE_MAX_CALLS_PER_RUN=10
BRAVE_LIMIT=10
BRAVE_DESCRIPTION_LIMIT=5
BRAVE_IMAGE_LIMIT=3

# ===================
# Gemini API
# ===================
GEMINI_API_KEY=your_gemini_api_key
GEMINI_ENABLED=true
GEMINI_MODEL=gemini-2.0-flash
GEMINI_MAX_CALLS_PER_RUN=3
GEMINI_MAX_CALLS_PER_DAY=10
GEMINI_USE_SEARCH_TOOL=true

# ===================
# Enrichment Settings
# ===================
ENRICH_MAX_CALLS_PER_RUN=20
ENRICH_TIMEOUT_MS=10000
ENRICH_MAX_BYTES=300000
EXTERNAL_ENRICH_ENABLED=true
EXHIBITION_DETAIL_ENRICH_ENABLED=false

# ===================
# Daily Scheduler Settings
# ===================
DAILY_JOB_TICK_MS=600000
DAILY_JOB_HOUR=3
DAILY_JOB_MINUTE=0

# Automation toggles
PRIVATE_SYNC_ENABLED=true
TREND_UPDATE_ENABLED=true
BARRIER_FREE_ENRICH_ENABLED=true

# Batch sizes (API 호출 제한용)
TREND_UPDATE_BATCH=20
TREND_UPDATE_DELAY_MS=1000
VENUE_ENRICH_BATCH=10
BARRIER_FREE_ENRICH_DELAY_MS=500

# ===================
# Private Venue Sync
# ===================
PRIVATE_FINAL_PER_VENUE_MAX=30
PRIVATE_FINAL_GLOBAL_MAX=30
PRIVATE_END_GRACE_DAYS=1
BACKFILL_IMAGE_LIMIT=8
